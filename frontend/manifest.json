{
    "manifest_version": 2,
    "name": "Glipher",
    "version": "1.0",
    "description": "Clip YT videos to create animated GIFs",
    "icons": {
        "16": "16.png",
        "48": "48.png",
        "128": "128.png"
    },
    "browser_action": {
        "default_icon": "16.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["jquery-3.5.1.min.js", "content.js"]
        }
    ]
}
